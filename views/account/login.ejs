<h1><%= title %></h1>

<%# messages() %>
<div class="form-login-desktop">
    <div class="form-login">
        <form action="" method="post">
            <label for="account_email"><strong>Email:</strong></label>
            <input type="email" name="account_email" id="account-email">
            <label for="account_password"><strong>Password:</strong></label>
            <input type="password" name="account_password" id="account-password">
            <div class="form-login-submit">
                <p>
                    <input type="submit" value="Login">
                </p>
            </div>
        </form>
        <div class="signup-link">
        <p> No account? <a href="signup">Sign-up</a></p>
        </div>
    </div>
</div>

